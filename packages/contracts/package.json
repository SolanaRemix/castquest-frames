{
  "name": "@castquest/contracts",
  "version": "1.0.0",
  "description": "CastQuest Protocol Smart Contracts",
  "scripts": {
    "postinstall": "echo 'Skipping forge install - run manually if needed'",
    "build": "forge build",
    "test": "forge test -vv",
    "test:coverage": "forge coverage",
    "test:gas": "forge test --gas-report",
    "lint": "forge fmt --check",
    "format": "forge fmt",
    "clean": "forge clean",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url localhost --broadcast",
    "deploy:sepolia": "forge script script/Deploy.s.sol --rpc-url sepolia --broadcast --verify"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "foundry",
    "castquest"
  ],
  "author": "CastQuest",
  "license": "MIT"
}
