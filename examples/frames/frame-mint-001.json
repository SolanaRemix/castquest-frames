      },
      "requiresSignature": true,
      "guards": [],
      "effects": []
    }
  ],
  "dataSchema": {
    "type": "object",
    "properties": {
      "mintedCount": { "type": "number" }
    }
  },
  "permissions": {
    "read": ["public"],
    "write": ["author"],
    "sign": ["user"],
    "onchain": ["user"]
  }
