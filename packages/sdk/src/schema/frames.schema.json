{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cast Quest Frame",
  "type": "object",
  "required": ["id", "version", "author", "type", "ui", "actions", "dataSchema", "permissions"],
  "properties": {
    "id": { "type": "string" },
    "version": { "type": "string" },
    "author": {
      "type": "object",
      "required": ["address", "handle"],
      "properties": {
        "address": { "type": "string" },
        "handle": { "type": "string" }
      }
    },
    "type": {
      "type": "string",
      "enum": ["mint", "collect", "game", "tool", "custom"]
    },
    "ui": { "type": "object" },
    "actions": { "type": "array" },
    "dataSchema": { "type": "object" },
    "permissions": { "type": "object" }
  }
}
